<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.financial.android"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".base.FXApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.welcome.WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- main -->
        <activity android:name=".activity.main.HomeActivity"></activity>
        <activity android:name=".activity.other.WebViewActivity" />
        <!-- welcome -->
        <activity android:name=".activity.welcome.LockSetupActivity"></activity>
        <activity android:name=".activity.welcome.LockActivity"></activity>
        <activity android:name=".activity.welcome.GuideViewActivity"></activity>
        <activity android:name=".activity.welcome.GuideGesturePasswordActivity"/>
        <!-- login -->
        <activity android:name=".activity.login.LoginActivity"></activity>
        <activity android:name=".activity.login.RegisterActivity"></activity>
        <activity android:name=".activity.login.LostPasswdActivity"></activity>
        <!-- home -->
        <activity android:name=".activity.home.PositionActivity"></activity>
        <activity android:name=".activity.home.HelpActivity"/>
        <activity android:name=".activity.home.RefreshListViewActivity"/>

        <!-- account -->
        <activity android:name=".activity.account.SettingActivity"></activity>
        <activity android:name=".activity.account.PersonalActivity"></activity>
        <activity android:name=".activity.account.MessageActivity"></activity>
        <activity android:name=".activity.account.WalletActivity"></activity>
        <!-- projects -->
        <activity android:name=".activity.projects.ProductActivity"/>
        <activity android:name=".activity.projects.ShowActivity"/>

        <!--Test activity-->
        <activity android:name=".activity.test.VerticalViewPagerActivity"/>
        <activity android:name=".activity.test.VerticalViewActivity"/>

    </application>

</manifest>
